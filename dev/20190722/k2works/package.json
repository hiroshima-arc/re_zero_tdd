{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "app": "ContosoUniversity",
    "app_docker": "k2works/contoso-university:v0.1.0",
    "app_dir": "app/ContosoUniversity",
    "test_dir": "app/ContosoUniversity.Tests"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all build:*",
    "test": "cd $npm_package_config_test_dir; dotnet test",
    "build:app": "cd $npm_package_config_app_dir; dotnet build",
    "app": "cd $npm_package_config_app_dir; dotnet watch run",
    "app:db:migrate": "cd $npm_package_config_app_dir; dotnet ef database update",
    "app:frontend": "browser-sync start --config bs-config.js",
    "watch:app": "watch 'npm-run-all test' $npm_package_config_app_dir/",
    "docker:app": "npm-run-all docker:app:build docker:app:run",
    "docker:app:build": "cd $npm_package_config_app_dir; docker build -t $npm_package_config_app_docker .",
    "docker:app:push": "cd $npm_package_config_app_dir; docker push $npm_package_config_app_docker",
    "docker:app:run": "cd $npm_package_config_app_dir; docker run -it --rm -p 8000:80 --name $npm_package_config_app $npm_package_config_app_docker",
    "docker:app:destroy": "cd $npm_package_config_app_dir; docker rm -f $npm_package_config_app",
    "docker:db": "docker run -e ACCEPT_EULA=Y -e SA_PASSWORD=P@ssw0rd! -p 1433:1433 --name db -d microsoft/mssql-server-linux",
    "aws:eb:init": "eb init $npm_package_config_app --profile default",
    "aws:eb:create": "eb create",
    "aws:eb:app:local": "eb local run",
    "aws:eb:app:build": "npm-run-all docker:app:build",
    "aws:eb:app:package": "npm-run-all docker:app:build docker:app:push",
    "aws:eb:app:deploy": "npm-run-all aws:eb:app:package; eb deploy",
    "aws:eb:app:release": "npm-run-all build test aws:eb:app:build aws:eb:app:package aws:eb:app:deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-csharp": "^0.6.0-development",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
