{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "app": "ContosoUniversity",
    "app_dir": "app/ContosoUniversity",
    "test_dir": "app/ContosoUniversity.Tests"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all build:*",
    "test": "cd $npm_package_config_test_dir; dotnet test",
    "build:app": "cd $npm_package_config_app_dir; dotnet build",
    "app": "cd $npm_package_config_app_dir; dotnet watch run",
    "app:frontend": "browser-sync start --config bs-config.js",
    "watch:app": "watch 'npm-run-all test' $npm_package_config_app_dir/",
    "docker:app": "npm-run-all docker:app:build docker:app:run",
    "docker:app:build": "cd $npm_package_config_app_dir; docker build -t app .",
    "docker:app:run": "cd $npm_package_config_app_dir; docker run -it --rm -p 8000:80 --name $npm_package_config_app app",
    "docker:app:destroy": "cd $npm_package_config_app_dir; docker rm -f $npm_package_config_app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-csharp": "^0.6.0-development",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
