{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "app",
      "host": {
        "sourcePath": "/var/app/current/ContosoUniversity"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "app",
      "image": "k2works/contoso-university:v0.1.0",
      "environment": [
        {
          "name":  "ASPNETCORE_ENVIRONMENT",
          "value":  "Production"
        }
      ],
      "essential": true,
      "memory": 128,
      "portMappings":  [
        {
          "hostPort":  80,
          "containerPort":  80
        }
      ],
      "links": [
        "db"
      ]
    },
    {
      "name": "db",
      "image": "microsoft/mssql-server-linux",
      "environment": [
        {
          "name":  "ACCEPT_EULA",
          "value":  "Y"
        },
        {
          "name":  "SA_PASSWORD",
          "value":  "P@ssw0rd!"
        }
      ],
      "essential": true,
      "memory": 1024
    }
  ]
}