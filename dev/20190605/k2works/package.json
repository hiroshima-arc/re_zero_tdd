{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "api_dir": "api",
    "app_dir": "api/src",
    "s3_bucket": "re-zero-tdd-serverless",
    "stack_name": "re-zero-tdd-api"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all build:*",
    "build:backend": "cd $npm_package_config_api_dir; sam build",
    "build:doc": "markdown README.md > ./src/readme.html",
    "test": "npm-run-all test:*",
    "test:backend": "mocha api/hello-world/tests/unit",
    "lint": "npm-run-all lint:*",
    "lint:frontend": "eslint src/**/*.js --fix",
    "lint:backend": "eslint $npm_package_config_app_dir/**/*.js --fix",
    "watch": "npm-run-all watch:*",
    "app": "npm-run-all app:*",
    "format": "npm-run-all format:*",
    "format:frontend": "prettier --write src/**/*.*",
    "format:backend": "prettier --write $npm_package_config_app_dir/**/*.js",
    "watch:frontend": "watch 'npm-run-all format:frontend' ./src ",
    "watch:backend": "watch 'npm-run-all format:backend' $npm_package_config_app_dir ",
    "app:frontend": "browser-sync start --config bs-config.js",
    "app:backend": "PORT=4000 nodemon --inspect server.js",
    "sam:local": "cd $npm_package_config_api_dir; sam local start-api --host 0.0.0.0 --port 5000",
    "sam:build": "cd $npm_package_config_api_dir; sam build",
    "sam:package": "cd $npm_package_config_api_dir; sam package --template-file .aws-sam/build/template.yaml --s3-bucket $npm_package_config_s3_bucket --output-template-file .aws-sam/build/packaged.yaml",
    "sam:deploy": "cd $npm_package_config_api_dir; sam deploy --template-file .aws-sam/build/packaged.yaml --stack-name $npm_package_config_stack_name --capabilities CAPABILITY_IAM --parameter-overrides ENV=production",
    "sam:describe": "aws cloudformation describe-stacks --stack-name $npm_package_config_stack_name",
    "sam:release": "npm-run-all test build sam:package sam:deploy sam:describe",
    "sam:destroy": "aws cloudformation delete-stack --stack-name $npm_package_config_stack_name",
    "aws:s3:create": "aws s3 mb s3://$npm_package_config_s3_bucket",
    "aws:s3:destroy": "aws s3 rb s3://$npm_package_config_s3_bucket --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "browser-sync": "^2.26.5",
    "chai": "^4.2.0",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
