{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "app_dir":  "api",
    "app_service_dir":  "api/hello_world",
    "s3_bucket": "re-zero-tdd-serverless",
    "stack_name": "rental-ruby-service",
    "region": "us-east-1",
    "stage": "Development",
    "api_url": "https://60johrtleb.execute-api.us-east-1.amazonaws.com/Prod/api"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "dev": "nf start -j Procfile-dev",
    "build": "npm-run-all build:* sam:build",
    "build:backend": "cd $npm_package_config_app_service_dir; bundle install --path vendor/bundle",
    "build:doc": "markdown README.md > ./src/readme.html",
    "test": "cd $npm_package_config_app_dir; bundle exec rspec tests/spec/**",
    "test:report": "cd $npm_package_config_app_dir/build/reports/tests/test; browser-sync start --server --files '**/*'",
    "linter": "cd $npm_package_config_app_dir; bundle exec rubocop",
    "linter:config": "cd $npm_package_config_app_dir; bundle exec rubocop --auto-gen-config",
    "linter:fix": "cd $npm_package_config_app_dir; bundle exec rubocop --auto-correct",
    "format": "npm-run-all format:*",
    "format:frontend": "prettier --write src/**/*.*",
    "format:backend": "prettier --write $npm_package_config_app_dir/**/*.rb",
    "watch:frontend": "watch 'npm-run-all format:frontend' ./src ",
    "watch:backend": "watch 'npm-run-all format:backend linter test' $npm_package_config_app_dir/",
    "app:frontend": "browser-sync start --config bs-config.js",
    "app:backend": "cd $npm_package_config_app_dir; bundle exec shotgun -p 9292 hello_world/config.ru",
    "aws:sam:build": "cd $npm_package_config_app_dir; sam build",
    "aws:sam:local": "cd $npm_package_config_app_dir; sam local start-api --host 0.0.0.0 --port 4000 --template template.yaml",
    "aws:sam:package": "sam package --template-file $npm_package_config_app_dir/template.yaml --s3-bucket $npm_package_config_s3_bucket --output-template-file $npm_package_config_app_dir/packaged.yaml",
    "aws:sam:deploy": "sam deploy --template-file $npm_package_config_app_dir/packaged.yaml --stack-name $npm_package_config_stack_name --parameter-overrides Stage=$npm_package_config_stage ApiUrl=$npm_package_config_api_url --region $npm_package_config_region --capabilities CAPABILITY_NAMED_IAM",
    "aws:sam:describe": "aws --region $npm_package_config_region cloudformation describe-stacks --stack-name $npm_package_config_stack_name",
    "aws:sam:release": "npm-run-all test aws:sam:build aws:sam:package aws:sam:deploy aws:sam:describe",
    "aws:sam:destroy": "aws --region $npm_package_config_region cloudformation delete-stack --stack-name $npm_package_config_stack_name",
    "aws:s3:create": "aws s3 mb s3://$npm_package_config_s3_bucket",
    "aws:s3:destroy": "aws s3 rb s3://$npm_package_config_s3_bucket --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-ruby": "^0.12.3",
    "browser-sync": "^2.26.7",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
