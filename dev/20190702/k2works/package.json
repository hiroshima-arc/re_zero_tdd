{
  "name": "k2works",
  "version": "1.0.0",
  "description": "## 概要",
  "main": "index.js",
  "config": {
    "s3_bucket": "re-zero-tdd-serverless",
    "stack_name": "rental-service",
    "app_dir":  "api/rental"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "dev": "nf start -j Procfile-dev",
    "build": "npm-run-all build:* sam:build",
    "build:backend": "cd $npm_package_config_app_dir; gradle build",
    "build:doc": "markdown README.md > ./src/readme.html",
    "test": "cd $npm_package_config_app_dir; gradle test",
    "test:report": "cd $npm_package_config_app_dir/build/reports/tests/test; browser-sync start --server --files '**/*'",
    "lint": "cd $npm_package_config_app_dir; gradle pmdMain",
    "lint:report": "cd $npm_package_config_app_dir/build/reports/pmd; browser-sync start --server --index test.html --files '**/*'",
    "format": "npm-run-all format:*",
    "format:frontend": "prettier --write src/**/*.*",
    "format:backend": "prettier --write $npm_package_config_app_dir/src/**/*.*",
    "watch:frontend": "watch 'npm-run-all format:frontend' ./src ",
    "watch:backend": "watch 'npm-run-all format:backend lint test' $npm_package_config_app_dir/src ",
    "app:frontend": "browser-sync start --config bs-config.js",
    "app:backend": "cd $npm_package_config_app_dir; gradle bootRun",
    "sam:build": "cd $npm_package_config_app_dir; mvn clean package",
    "sam:local": "cd $npm_package_config_app_dir; sam local start-api --host 0.0.0.0 --template sam.yaml",
    "sam:package": "cd $npm_package_config_app_dir; aws cloudformation package --template-file sam.yaml --output-template-file output-sam.yaml --s3-bucket $npm_package_config_s3_bucket",
    "sam:deploy": "cd $npm_package_config_app_dir; aws cloudformation deploy --template-file output-sam.yaml --stack-name $npm_package_config_stack_name --capabilities CAPABILITY_IAM --parameter-overrides ENV=production",
    "sam:describe": "aws cloudformation describe-stacks --stack-name $npm_package_config_stack_name",
    "sam:release": "npm-run-all clean test build sam:package sam:deploy sam:describe",
    "sam:destroy": "aws cloudformation delete-stack --stack-name $npm_package_config_stack_name",
    "aws:s3:create": "aws s3 mb s3://$npm_package_config_s3_bucket",
    "aws:s3:destroy": "aws s3 rb s3://$npm_package_config_s3_bucket --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-java": "^0.3.1",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
