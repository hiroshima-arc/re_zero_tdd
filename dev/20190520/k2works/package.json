{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "app_dir": "api"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all build:*",
    "build:app": "cd $npm_package_config_app_dir; gradle build",
    "build:doc": "markdown README.md > ./src/readme.html",
    "test": "cd $npm_package_config_app_dir; gradle test",
    "test:view": "cd $npm_package_config_app_dir/build/reports/tests/test; browser-sync start --server --files '**/*'",
    "lint": "cd $npm_package_config_app_dir; gradle pmdMain",
    "format": "prettier --write $npm_package_config_app_dir/src/**/*.*",
    "watch": "watch 'npm-run-all format lint test' $npm_package_config_app_dir/src ",
    "app:front": "browser-sync start --config bs-config.js",
    "app:api": "cd $npm_package_config_app_dir; gradle bootRun"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.5",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "prettier-plugin-java": "0.0.10",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
