{
  "name": "k2works",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "app_dir": "api/todo/src/todo",
    "test_dir": "api/todo/test/todo.Tests",
    "s3_bucket": "re-zero-tdd-serverless",
    "stack_name": "todo-dotnet-service",
    "region": "us-east-1",
    "stage": "Development",
    "api_url": ""
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "dev": "nf start -j Procfile-dev",
    "build": "npm-run-all build:*",
    "build:backend": "cd $npm_package_config_app_dir; dotnet build",
    "build:doc": "markdown README.md > ./src/readme.html",
    "test": "cd $npm_package_config_test_dir; dotnet test",
    "linter": "cd $npm_package_config_app_dir;",
    "format": "npm-run-all format:*",
    "format:frontend": "prettier --write src/**/*.*",
    "format:backend": "",
    "watch:frontend": "watch 'npm-run-all format:frontend' ./src ",
    "watch:backend": "watch 'npm-run-all test' $npm_package_config_app_dir/",
    "app:frontend": "browser-sync start --config bs-config.js",
    "app:backend": "cd $npm_package_config_app_dir; dotnet watch run",
    "app:release": "npm-run-all build test dotnet:lambda:deploy",
    "dotnet:lambda:deploy": "cd $npm_package_config_app_dir; dotnet lambda deploy-serverless -sn $npm_package_config_stack_name -sb $npm_package_config_s3_bucket --region $npm_package_config_region",
    "dotnet:lambda:describe": "cd $npm_package_config_app_dir; dotnet lambda list-serverless --region $npm_package_config_region",
    "dotnet:lambda:destroy": "cd $npm_package_config_app_dir; dotnet lambda delete-serverless -sn $npm_package_config_stack_name --region $npm_package_config_region",
    "aws:s3:create": "aws s3 mb s3://$npm_package_config_s3_bucket",
    "aws:s3:destroy": "aws s3 rb s3://$npm_package_config_s3_bucket --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "markdown-to-html": "0.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-csharp": "^0.6.0-development",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2"
  }
}
